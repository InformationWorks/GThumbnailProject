<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_user_pic_holder">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative_background">
        <ImageView
            android:id="@+id/imageView_color_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/oval_white"/>
        <TextView
            android:id="@+id/textView_initials"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="HB"
            android:textSize="23sp"
            android:textColor="@color/g_white"
            android:fontFamily="sans-serif-light"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative_foreground">
        <ImageView
            android:id="@+id/imageView_real"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>
</RelativeLayout>